root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[*.cmd]
end_of_line = crlf

[*.sh]
end_of_line = lf

[*.java]
indent_size = 2

[*.xml]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.g4]
indent_size = 2